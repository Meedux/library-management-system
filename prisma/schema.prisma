datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
}

model Book {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    name String @unique
}

model Category {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    name String @unique
}

model Author {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    name String @unique
}